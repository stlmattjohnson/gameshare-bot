#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Format staged files with project's Prettier and re-add them to the commit
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|js|json|md|css|scss|html)$' || true)
if [ -n "$STAGED_FILES" ]; then
  # Use local prettier (no network fetch)
  npx --no-install prettier --write -- $STAGED_FILES
  git add $STAGED_FILES
fi
