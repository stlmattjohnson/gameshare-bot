generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model GuildConfig {
  guildId              String   @id
  announceChannelId    String?
  requestChannelId     String?  // NEW: where to send "please add game" requests
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  enabledGames         EnabledGame[]
  roleMappings         GameRoleMapping[]
  customGames          CustomGame[]
  addRequests          GameAddRequest[]
}

model EnabledGame {
  id        Int      @id @default(autoincrement())
  guildId   String
  gameId    String    // can be static catalog id (e.g. g001) or custom id (e.g. cg_abc123)
  createdAt DateTime @default(now())

  guild     GuildConfig @relation(fields: [guildId], references: [guildId], onDelete: Cascade)

  @@unique([guildId, gameId])
  @@index([guildId])
}

model GameRoleMapping {
  id        Int      @id @default(autoincrement())
  guildId   String
  gameId    String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  guild     GuildConfig @relation(fields: [guildId], references: [guildId], onDelete: Cascade)

  @@unique([guildId, gameId])
  @@index([guildId])
}

model CustomGame {
  id         String   @id // NEW: e.g. cg_<random>
  guildId    String
  name       String
  // Optional: what presence text to match exactly (normalized comparison)
  presenceName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  guild      GuildConfig @relation(fields: [guildId], references: [guildId], onDelete: Cascade)

  @@index([guildId])
  @@unique([guildId, name])
}

model GameAddRequest {
  id            Int      @id @default(autoincrement())
  guildId       String
  userId        String
  presenceName  String   // what Discord shows as the activity name
  status        String   @default("PENDING") // PENDING | APPROVED | REJECTED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  guild         GuildConfig @relation(fields: [guildId], references: [guildId], onDelete: Cascade)

  @@index([guildId])
  @@index([guildId, status])
}

model UserOptIn {
  id        Int      @id @default(autoincrement())
  guildId   String
  userId    String
  optedIn   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
}

model UserGameRolePref {
  id        Int      @id @default(autoincrement())
  guildId   String
  userId    String
  gameId    String
  createdAt DateTime @default(now())

  @@unique([guildId, userId, gameId])
  @@index([guildId, userId])
}

model PromptCooldown {
  id             Int      @id @default(autoincrement())
  guildId        String
  userId         String
  gameId         String
  lastPromptedAt DateTime @default(now())

  @@unique([guildId, userId, gameId])
  @@index([guildId, userId])
}

model UnknownGamePromptCooldown {
  id             Int      @id @default(autoincrement())
  guildId        String
  userId         String
  presenceName   String
  lastPromptedAt DateTime @default(now())

  @@unique([guildId, userId, presenceName])
  @@index([guildId, userId])
}

model ShareRequestState {
  id         Int      @id @default(autoincrement())
  guildId    String
  userId     String
  gameId     String
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([guildId, userId, gameId])
  @@index([guildId, userId])
}

model UserSharedDetails {
  id         Int      @id @default(autoincrement())
  guildId    String
  userId     String
  steamId    String?
  serverName String?
  serverIp   String?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@unique([guildId, userId])
  @@index([guildId, userId])
}

model PostedMessage {
  messageId  String   @id
  guildId    String
  gameId     String
  roleId     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([guildId])
}

model Session {
  id         Int      @id @default(autoincrement())
  messageId  String   @unique
  guildId    String
  channelId  String
  userId     String
  gameId     String
  roleId     String?
  detailKind String?
  detailValue String?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([guildId])
  @@index([userId])
}

model GamePromptTimeout {
  id       Int      @id @default(autoincrement())
  guildId  String
  userId   String
  gameId   String
  until    DateTime

  @@unique([guildId, userId, gameId])
  @@index([guildId, userId])
}
